{
  "name": "hardly-an-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-css": "node ./src/design | postcss --use autoprefixer --use postcss-clean > dist/bundle.css",
    "watch-css": "watch 'node ./src/design > dist/bundle.css' ./src",
    "build-js": "browserify src/index.js -t envify -g aliasify -t brfs -t [ babelify --presets [ babel-preset-es2015 babel-preset-react ] ] -g uglifyify > dist/bundle.js",
    "watch-js": "budo src/index.js:bundle.js --dir dist --pushstate --live -- -t [ envify --NODE_ENV development ] -g aliasify -t brfs",
    "start": "concurrently --kill-others \"npm run watch-js\" \"npm run watch-css\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "aliasify": "^2.1.0",
    "autoprefixer": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^7.3.0",
    "brfs": "^1.4.3",
    "browserify": "^13.1.0",
    "concurrently": "^3.4.0",
    "envify": "^4.0.0",
    "postcss-clean": "^1.0.2",
    "postcss-cli": "^4.0.0",
    "preact-compat": "^3.16.0",
    "uglifyify": "^3.0.4",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "axios": "^0.14.0",
    "budo": "^9.0.0",
    "clone-deep": "^0.2.4",
    "coloreact": "^0.1.10",
    "gr8": "^2.1.7",
    "lilcss": "0.0.0",
    "lodash.throttle": "^4.1.1",
    "moment": "^2.14.1",
    "normalize-url": "^1.6.1",
    "object-values": "^1.0.0",
    "preact": "^8.1.0",
    "react-color": "^2.11.7",
    "recsst": "^1.1.2",
    "rooch": "^2.2.0",
    "tinycolor2": "^1.4.1",
    "uuid": "^3.0.1",
    "valid-url": "^1.0.9",
    "webfontloader": "^1.6.26",
    "xtend": "^4.0.1"
  },
  "aliasify": {
    "aliases": {
      "react": "preact-compat",
      "react-dom": "preact-compat"
    }
  }
}
