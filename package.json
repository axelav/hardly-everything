{
  "name": "hardly-everything",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-css": "node ./src/design | postcss --use autoprefixer --use postcss-clean > dist/bundles/bundle.css",
    "watch-css": "watch 'node ./src/design > dist/bundles/bundle.css' ./src",
    "build-js": "browserify src/index.js -t envify -t brfs -g uglifyify > dist/bundles/bundle.js",
    "watch-js": "budo src/index.js:bundles/bundle.js --dir dist --pushstate -- -t [ envify --NODE_ENV development ] -t brfs",
    "start": "concurrently --kill-others \"npm run watch-js\" \"npm run watch-css\"",
    "deploy": "dat sync dist/"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "brfs": "^1.4.3",
    "browserify": "^13.1.0",
    "concurrently": "^3.4.0",
    "envify": "^4.0.0",
    "postcss-clean": "^1.0.2",
    "postcss-cli": "^4.0.0",
    "rollupify": "^0.3.9",
    "tape": "^4.6.3",
    "uglifyify": "^3.0.4",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "assert": "^1.4.1",
    "axios": "^0.14.0",
    "budo": "^9.0.0",
    "choo": "^6.4.1",
    "clone-deep": "^0.2.4",
    "coloreact": "^0.1.10",
    "fastclick": "^1.0.6",
    "gr8": "^3.1.2",
    "install": "^0.10.1",
    "lilcss": "0.0.0",
    "lodash.throttle": "^4.1.1",
    "moment": "^2.14.1",
    "nanocomponent": "^6.4.2",
    "normalize-url": "^1.6.1",
    "object-values": "^1.0.0",
    "react-color": "^2.11.7",
    "recsst": "^1.1.2",
    "rooch": "^2.2.0",
    "tinycolor2": "^1.4.1",
    "uuid": "^3.0.1",
    "valid-url": "^1.0.9",
    "webfontloader": "^1.6.26",
    "xtend": "^4.0.1"
  }
}
